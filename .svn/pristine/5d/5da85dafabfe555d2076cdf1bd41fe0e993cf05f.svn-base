 <md-dialog aria-label="新增账务明细" ng-cloak style="min-width: 50%" id="budgetcreatelist-dialog1-detail">
    <form name="addaccounting" class="ng-pristine ng-valid-email ng-invalid ng-invalid-required">
        <md-toolbar>
            <div class="md-toolbar-tools">
                <h2 style="color: white">新增账务明细</h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="cancel()">
                    <md-icon md-svg-src="img/icons/ic_close_24px.svg" aria-label="Close dialog"></md-icon>
                </md-button>
            </div>
        </md-toolbar>
        <md-dialog-content>
            <div class="md-dialog-content" style="padding-top: 0px;padding-bottom: 0px">
             
                <div class="demo-tab" style="padding: 25px 25px 0 25px; text-align: center;">
					<!--<div layout-gt-sm="row">
                            <dr-Org remodel="org" titlename="预算部门 (必填)" budget_headers_id="" feetype="feetype"></dr-Org>

						    <dr-Feetype remodel="feetype" titlename="预算部科目(必填)" orgid="{{org.busi_org_id}}" budgetnode="budgetnode"></dr-Feetype>

                        	<dr-Budgetnode remodel="budgetnode" titlename="预算单元(必填)" orgid="{{org.busi_org_id}}" feetypeid="{{feetype.fee_type_id}}"></dr-Budgetnode>

					</div>-->

						<dr-Budget remodel="budget" datamodel="emscaapportionl" titlenamea="预算部门 (必填)" titlenameb="预算部科目(必填)" titlenamec="预算单元(必填)"></dr-Budget>					

					<div layout-gt-sm="row">
						<md-input-container class="md-block" flex-gt-sm>
                            <label>借贷类型 (必填)</label>
                            <md-select ng-model="emscaapportionl.debit_credit_type" style="text-align: left;margin: 0px;" required>
                                <md-option ng-repeat="type in accountings.types" value="{{type.id}}">{{type.name}}</md-option>
                            </md-select>
                        </md-input-container>
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>预算金额 (必填)</label>
                            <input ng-model="emscaapportionl.budget_amount" type="number" required>
                        </md-input-container>
					</div>

                </div>

            </div>
        </md-dialog-content>
        <md-dialog-actions>
            <span flex></span>
            <md-button class="md-primary md-raised" ng-click="answer()"  style="color: white;float: right"
                       ng-disabled="false" disabled="disabled">保存</md-button>

        </md-dialog-actions>
    </form>
</md-dialog>

<style>
    #budgetcreatelist-dialog1-detail .md-datepicker-input-container.md-datepicker-invalid {
        border-bottom-color: rgb(224,224,224);
    }
    #budgetcreatelist-dialog1-detail .md-datepicker-input-container{
        width: 93.9%;
        margin-left: -2px;
    }
    #budgetcreatelist-dialog1-detail .md-datepicker-calendar-icon{
        margin-bottom: -7px;
    }
</style>