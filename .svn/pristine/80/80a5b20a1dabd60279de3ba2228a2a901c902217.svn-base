<md-dialog aria-label="人员范围选择" ng-cloak style="min-width: 50%;max-width:60%;" id="rperson-dialog3-detail">

    <form name="addrperson" class="ng-pristine ng-valid-email ng-invalid ng-invalid-required">
        <md-toolbar>
            <div class="md-toolbar-tools">
                <h2 style="color: white">人员范围选择</h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="cancel()">
                    <md-icon md-svg-src="img/icons/ic_close_24px.svg" aria-label="Close dialog"></md-icon>
                </md-button>
            </div>
        </md-toolbar>
        <md-dialog-content>
            <div class="md-dialog-content" style="padding-top: 0px;padding-bottom: 0px">

                <table class="table ng-scope" style="font-size: 14px;width: 94%;margin: 3%;margin-top: 2%;text-align: center;"  border="0">
                    <td>
                        <span style="float: right">名称：</span></td>
                    <td>
                        <input ng-model="search.area_name" type="text" style="width: 100%;margin: 0; ">
                    </td>
                    <td></td>
                    <td>
                        <span style="float: right">编码：</span></td>
                    <td>
                        <input ng-model="search.area_name" type="text" style="width: 100%;margin: 0; ">
                    </td>
                    <td>
                        <md-icon md-svg-src="img/icons/search.svg" ng-click="search_rperson1()" style="cursor: pointer"></md-icon>
                    </td>
                </table>

                <table ng-table="tableParams11" class="table table-condensed table-bordered table-striped" show-filter="true" style="font-size:14px;width: 94%;margin: 3%;margin-top: 0%;margin-bottom: 0%;">

                    <tr ng-repeat="user in $data">

                        <td>
                            <md-checkbox ng-model="user.check1" ng-checked="exists(user, selected)"  ng-click="toggle(user, selected)" style="margin-bottom: 0px"></md-checkbox></td>

                        <td title="'名称'" filter="{ level_name: 'text'}" sortable="'level_name'">
                            {{user.level_name}}</td>
                        <td title="'编码'" filter="{ level_id: 'text'}" sortable="'level_id'" style="word-wrap:break-word">
                            {{user.level_id}}</td>

                    </tr>
                </table>
                <div style="margin-right: 3%;float: right" layout="row">

                    <span style="margin: 25px 27px 26px 0;">Page:</span>
                    <md-select ng-model="pageindex1">
                        <md-option ng-repeat="page in pages1" value="{{page}}">{{page}}</md-option>
                    </md-select>

                    <span style="margin: 25px 27px 26px 0;">Rows per page:</span>
                    <md-select ng-model="pagesize1">
                        <md-option value="2">2</md-option>
                        <md-option value="5">5</md-option>
                        <md-option value="10">10</md-option>
                        <md-option value="20">20</md-option>
                    </md-select>
                    <span style="margin:27px 0 26px 18px;">{{page11}} - {{page21}} of {{total1}}</span>
                    <md-button class="md-primary" md-no-ink style="min-width: 1%" ng-click="lastpage1()" ng-disabled="lastpaged1">
                        <span> < </span>
                    </md-button>
                    <md-button class="md-primary" md-no-ink style="min-width: 1%" ng-click="nextpage1()" ng-disabled="nextpaged1">
                        <span> > </span>
                    </md-button>


                    <!--<a ng-repeat="x in pages" ng-class="{'pactive': x == activepage}" ng-click="goodspage(x)" style="cursor: pointer;text-decoration: none;border: 1px solid black;padding: 4px;margin-left: 1%;">{{x}}</a>-->
                </div>
            </div>
        </md-dialog-content>
        <md-dialog-actions>
            <label>已选：</label>
            <md-chips ng-model="selected" md-max-chips="1">
                <md-chip-template>
                    <strong>{{$chip.level_name}}</strong>
                </md-chip-template>
            </md-chips>
            <span flex></span>
            <md-button class="md-primary md-raised" ng-click="answer($event)"  style="color: white;float: right"
                       ng-disabled="addrperson.$invalid" disabled="disabled">确定</md-button>

        </md-dialog-actions>
    </form>
</md-dialog>

<style>
    /*#rperson-dialog1-detail .md-datepicker-input-container.md-datepicker-invalid {*/
        /*border-bottom-color: rgb(224,224,224);*/
    /*}*/
    md-chips input{
        display: none;
    }
    md-chips md-chips-wrap{
        box-shadow:none;
    }
    #rperson-dialog3-detail .md-datepicker-input-container{
        width: 93.9%;
        margin-left: -2px;
    }
    #rperson-dialog3-detail .md-datepicker-calendar-icon{
        margin-bottom: -7px;
    }
    #rperson-dialog3-detail .active{
        color:blue;
    }
</style>