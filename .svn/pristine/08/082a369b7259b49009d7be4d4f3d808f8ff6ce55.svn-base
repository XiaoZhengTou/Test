<md-dialog aria-label="新增地区类别" ng-cloak style="min-width: 50%" id="rarea-dialog1-detail">
    <form name="addrarea" class="ng-pristine ng-valid-email ng-invalid ng-invalid-required">
        <md-toolbar>
            <div class="md-toolbar-tools">
                <h2 style="color: white">新增地区类别</h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="cancel()">
                    <md-icon md-svg-src="img/icons/ic_close_24px.svg" aria-label="Close dialog"></md-icon>
                </md-button>
            </div>
        </md-toolbar>
        <md-dialog-content>
            <div class="md-dialog-content" style="padding-top: 0px;padding-bottom: 0px">

                <div class="demo-tab" style="padding: 25px 25px 0 25px; text-align: center;">

                    <md-input-container class="md-block" flex-gt-sm>
                        <label>地区类别(必填)</label>
                        <input ng-model="rarea.area_type_name" type="text" required>
                    </md-input-container>

                    <md-input-container class="md-block" flex-gt-sm style="text-align: left;padding-top: 20px;padding-bottom: 20px;">
                        <label>适用组织(必选)</label>
                        <!--<md-select ng-model="rarea.org_name" required>-->
                            <!--<md-option value="IT部1">IT部1</md-option>-->
                            <!--<md-option value="IT部2">IT部2</md-option>-->
                        <!--</md-select>-->
                        <input  ng-model="rarea.org_name" type="text" required ng-click="addarea1($event,rarea)">
                    </md-input-container>

                    <a ng-click="addarea($event,rarea)" style="cursor: pointer;color: blue">选择区域</a>
                    <md-chips ng-model="rarea.emssmareatypels" md-max-chips="1"  readonly="true">
                        <md-chip-template>
                            <strong>{{$chip.area_name}}</strong>
                        </md-chip-template>
                    </md-chips>

                </div>

            </div>
        </md-dialog-content>
        <md-dialog-actions>
            <!--<span flex></span>-->
            <md-button class="md-primary md-raised" ng-click="answer()"  style="color: white;float: right"
                       ng-disabled="addrarea.$invalid" disabled="disabled">确定</md-button>

        </md-dialog-actions>
    </form>
</md-dialog>

