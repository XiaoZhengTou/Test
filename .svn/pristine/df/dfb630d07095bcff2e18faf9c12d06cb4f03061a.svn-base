<div ng-controller="defaultDeptCtrl">
	<md-card class="ml-padding-pc">
		<div class="basefilter">
			<div layout="row">
				<div flex class="ml-padding-right">
					<md-input-container class="md-block md-cyan-theme md-input-invalid">
						<label>预算部门</label>
						<input ng-model="query.query_param.busi_org_name" type="text">
					</md-input-container>
				</div>
				<div flex class="ml-padding-right" style="padding-top:10px;padding-left:20px;">
					<md-button class="md-raised md-primary ml-nomargin ml-button" aria-label="立即搜索" ng-click="getData()">立即搜索</md-button>
					<md-button class="md-raised ml-nomargin ml-button" aria-label="立即搜索" ng-click="clearFilter()">清空条件</md-button>
				</div>
			</div>
		</div>
	</md-card>
	<!--呈现默认预算部门-->
	<md-card>
		<div>
			<div class="md-toolbar-tools" layout="row">
				<span flex='40'>默认预算部门 : {{views.data.busiOrg.busi_org_name}}</span>
				<span flex></span>
			</div>
		</div>
	</md-card>
	<!-- 筛选面板结束 -->
	<md-card class="ml-margin-top">
		<!-- 表格开始 -->
		<md-table-container>
			<table md-table ng-model="selected" md-progress="promise" multiple>
				<thead md-head md-order="query.order_by" md-on-reorder="getData">
					<tr md-row>
						<th md-column>
							预算部门编码
						</th>
						<th md-column>
							预算部门
						</th>
						<th md-column md-numeric>
							操作
						</th>
					</tr>
				</thead>
				<tbody md-body>
					<tr md-row ng-repeat="x in viewData.data.info">
						<td md-cell><span>{{x.busi_org_code}}</span></td>
						<td md-cell><span>{{x.busi_org_name}}</span></td>
						<td md-cell><a ng-if="$index!=selecedindex" style="color: #555;cursor: pointer;" ng-click="is_defaultClick($index)">设为默认</a><a ng-if="$index==selecedindex" style="color: #fff;background:#C51162; cursor: pointer;padding:8px 4px"  ng-click="is_defaultClick($index)">设为默认</a></td>
					</tr>
				</tbody>
			</table>
		</md-table-container>
		<!-- 表格导航开始 -->
		<md-table-pagination md-label="{page: '页码导航：', rowsPerPage: '每页数据：', of: '，总条数：'} " md-limit="query.page_size " md-limit-options="[5, 10, 15] " md-page="query.page_number " md-total="{{viewData.data.totalRow}} " md-on-paginate="getData" md-page-select></md-table-pagination>
		<!-- 表格导航结束 -->
</div>