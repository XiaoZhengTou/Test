<div ng-controller="xingyongctrl">
	<md-card class="md-padding" layout="column">
		<br>
		<div layout="row">
			<md-input-container class="md-block ml-nomargin" flex-gt-sm>
				<label>员工名称</label>
				<input ng-model="query.credit_user_name">
			</md-input-container>
			<md-input-container class="md-block ml-nomargin" flex-gt-sm>
				<label>员工账号</label>
				<input ng-model="query.fee_apply_code">
			</md-input-container>
		</div>
		<div layout="row" layout-align="center center">
			<div>
				<md-button class="md-raised md-primary" ng-click="loadData()">查询</md-button>
			</div>
		</div>
	</md-card>
	<md-card>
		<div>
			<div class="md-toolbar-tools" layout="row">
				<span>查询结果</span>
				<span flex></span>
				<md-menu style="padding:4px 0;">
					<md-button aria-label="Open user menu" ng-click="$mdOpenMenu()" aria-label="side navigation">
						<md-icon md-svg-src="img/icons/three.svg"></md-icon>
					</md-button>
					<md-menu-content width="4">
						<md-menu-item>
							<md-button aria-label="side navigation">
								<md-icon md-svg-src="img/icons/excel_in.svg"></md-icon>
								<span class="ng-scope">Excel导入</span>
							</md-button>
						</md-menu-item>
						<md-menu-item>
							<md-button aria-label="side navigation">
								<md-icon md-svg-src="img/icons/excel_out.svg"></md-icon>
								<span class="ng-scope">Excel导出</span>
							</md-button>
						</md-menu-item>
					</md-menu-content>
				</md-menu>
			</div>
		</div>
		<md-divider></md-divider>
		<md-table-container>
			<table md-table md-row-select multiple ng-model="selected" md-progress="promise">
				<thead md-head md-order="query.order" md-on-reorder="getDesserts">
					<tr md-row>
						<!--<th md-column md-numeric>单号</th>-->
						<th md-column md-numeric>员工名称</th>
						<th md-column md-numeric>账号</th>
						<!--<th md-column md-numeric>币种</th>-->
						<th md-column md-numeric>目前积分</th>
						<th md-column md-numeric>更新时间</th>
						<!--<th md-column md-numeric>状态</th> 
						<th md-column md-numeric>费用类型</th>-->
						<th md-column md-numeric>操作</th>

					</tr>
				</thead>
				<tbody md-body>
					<tr md-row md-select="item" md-select-id="fee_apply_id" md-auto-select ng-repeat="item in xingyong.data.datalist">
						<!--<td md-cell>{{item.fee_apply_id}}</td>-->
						<td md-cell>{{item.credit_user_name}}</td>
						<td md-cell>{{item.credit_id}}</td>
						<!--<td md-cell>{{item.currency_name}}</td>-->
						<td md-cell>{{item.credit_user_code}}</td>
						<td md-cell>{{item.creation_date}}</td>
						<!--<td md-cell>{{item.order_status|order_status}}</td>
						<td md-cell>{{item.order_type|applytype}}</td>-->
						<td md-cell>
							<md-button class="md-primary md-raised" ng-href="#/xingyongguanli/addbaingen">
								变更记录
							</md-button>
						</td>

					</tr>
				</tbody>
			</table>
		</md-table-container>
		<md-table-pagination md-label="{page: '页码导航：', rowsPerPage: '每页数据：', of: '总条数：'}" md-limit="query.limit" md-limit-options="[5, 10, 15]" md-page="query.page" md-total="{{feeapplylist.data.page.totalRow}}" md-on-paginate="getDesserts" md-page-select></md-table-pagination>
	</md-card>
	<md-button aria-label="menu" class="md-fab ml-bottom-fab" ng-click="showAdvanced($event)">
		<md-tooltip md-direction="left">
			信用管理-修改
		</md-tooltip>
		<md-icon class="iconfont">&#xe631;</md-icon>
	</md-button>
</div>